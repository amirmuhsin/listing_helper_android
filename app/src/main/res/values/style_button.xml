<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_btn_height</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/default_btn_text_size</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="PrimaryButtonStyle" parent="BaseButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_btn_height</item>
        <item name="android:textColor">@color/primary_btn_text_color</item>
        <item name="android:background">@drawable/selector_bg_btn_primary</item>
    </style>

    <style name="SecondaryButtonStyle" parent="BaseButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_btn_height</item>
        <item name="android:textColor">@color/secondary_btn_text_color</item>
        <item name="android:background">@drawable/selector_bg_btn_secondary</item>
    </style>

    <style name="SmallestButtonStyle" parent="BaseButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:layout_height">@dimen/small_btn_height</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:background">@drawable/selector_bg_gray_item_rounded_16</item>
    </style>

    <style name="TextButtonStyle" parent="BaseButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_btn_height</item>
        <item name="android:textColor">@drawable/selector_bg_btn_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BlackButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/selector_bg_btn_onboarding</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:paddingStart">@dimen/very_large_padding</item>
        <item name="android:paddingEnd">@dimen/very_large_padding</item>
        <item name="android:textSize">@dimen/medium_plus_text_size</item>
        <item name="android:fontFamily">@font/arial_rounded_mt_bold</item>
    </style>

</resources>
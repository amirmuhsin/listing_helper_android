<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/medium_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Barcode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extreme_padding"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etBarcode"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/app_edit_text_height"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_weight="1"
                android:hint="Barcode"
                android:inputType="text"/>

            <ImageButton
                android:id="@+id/btnScanBarcode"
                style="@style/ImageButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selector_bg_btn_secondary"
                android:src="@drawable/ic_scan_barcode"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvProductName"
            style="@style/SubTitle_4_TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:tools="Hello"/>

        <TextView
            android:id="@+id/tvProductDescription"
            style="@style/Body_4_TextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tools="Hello"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSelectedPhotos"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_marginTop="@dimen/large_padding"
            android:orientation="horizontal"
            android:overScrollMode="never"/>

        <Button
            android:id="@+id/btnAddPhoto"
            style="@style/SecondaryButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/small_padding"
            android:paddingHorizontal="@dimen/medium_padding"
            android:text="Add Photo"/>
    </LinearLayout>

    <!-- Submit -->
    <Button
        android:id="@+id/btnSubmit"
        style="@style/PrimaryButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/large_padding"
        android:enabled="false"
        android:text="Submit"/>
</FrameLayout>

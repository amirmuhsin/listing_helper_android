<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_top_16"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/medium_plus_padding"
    android:paddingTop="@dimen/medium_padding"
    android:paddingBottom="@dimen/large_padding">

    <View
        android:layout_width="@dimen/bottom_sheet_handle_width"
        android:layout_height="@dimen/bottom_sheet_handle_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/bottom_sheet_handle_color"/>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/H4TextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/medium_plus_padding"
        android:layout_marginBottom="@dimen/small_plus_padding"
        android:gravity="center"
        tools:text="This is a title"/>

    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/Body_2_TextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/medium_plus_padding"
        android:gravity="center"
        tools:text="This is a subtitle"/>

    <Button
        android:id="@+id/btnPrimary"
        style="@style/PrimaryButtonStyle"
        tools:text="Ha"/>

    <Button
        android:id="@+id/btnSecondary"
        style="@style/SecondaryButtonStyle"
        android:layout_marginTop="@dimen/medium_padding"
        tools:text="Bekor qilish"/>

</LinearLayout>